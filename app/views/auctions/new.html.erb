<%= link_to '<< Back', auctions_path %>

<%= form_for @auction do |f| %>
<form>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :detail %>
    <%= f.text_area :detail %>
  </div>

  <div class="form-group">
    <%= f.label :end_on, "Ends On" %>
    <%= f.date_select :end_on, start_year: Time.now.year, start_month:Time.now.month  %>
  </div>
  <div class="form-group">
    <%= f.label :reserve_price %>
    <%= f.text_field :reserve_price %>
  </div>
    <%= f.submit%>
</form>
<% end  %>
